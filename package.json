{
	"name": "ngx-plug-n-play",
	"version": "1.2.1",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"build": "ng build",
		"build:demo": "ng build ngx-plug-n-play",
		"build:demo:prod": "ng build --prod ngx-plug-n-play",
		"build:lib:prod": "ng build --prod ngx-plug-n-play-lib",
		"build:lib": "ng build ngx-plug-n-play-lib",
		"test": "ng test",
		"test:lib": "ng test ngx-plug-n-play-lib",
		"lint": "ng lint",
		"e2e": "ng e2e",
		"pack:lib": "cd dist/ngx-plug-n-play-lib && npm pack",
		"package": "npm run build:lib:prod && npm run pack:lib",
		"precommit": "lint-staged && ng test ngx-plug-n-play-lib --watch=false",
		"deploy": "npm run package && npm publish dist/ngx-plug-n-play-lib"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run precommit"
		}
	},
	"lint-staged": {
		"src/**/*.{js,ts,json,css,scss,md}": [
			"prettier --write"
		],
		"projects/**/*.{js,ts,json,css,scss,md}": [
			"prettier --write",
			"git add"
		]
	},
	"private": false,
	"dependencies": {
		"@angular/animations": "~7.2.0",
		"@angular/common": "~7.2.0",
		"@angular/compiler": "~7.2.0",
		"@angular/core": "~7.2.0",
		"@angular/forms": "~7.2.0",
		"@angular/platform-browser": "~7.2.0",
		"@angular/platform-browser-dynamic": "~7.2.0",
		"@angular/router": "~7.2.0",
		"core-js": "^2.5.4",
		"rxjs": "~6.3.3",
		"tslib": "^1.9.0",
		"zone.js": "~0.8.26"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "~0.13.0",
		"@angular-devkit/build-ng-packagr": "~0.13.0",
		"@angular/cli": "~7.3.5",
		"@angular/compiler-cli": "~7.2.0",
		"@angular/language-service": "~7.2.0",
		"@types/jasmine": "~2.8.8",
		"@types/jasminewd2": "~2.0.3",
		"@types/node": "~8.9.4",
		"codelyzer": "~4.5.0",
		"husky": "^2.3.0",
		"jasmine-core": "~2.99.1",
		"jasmine-spec-reporter": "~4.2.1",
		"karma": "~6.3.14",
		"karma-chrome-launcher": "~2.2.0",
		"karma-coverage-istanbul-reporter": "~2.0.1",
		"karma-jasmine": "~1.1.2",
		"karma-jasmine-html-reporter": "^0.2.2",
		"lint-staged": "^8.1.7",
		"ng-packagr": "^4.2.0",
		"prettier": "^1.17.1",
		"protractor": "~5.4.0",
		"ts-node": "~7.0.0",
		"tsickle": ">=0.34.0",
		"tslib": "^1.9.0",
		"tslint": "~5.11.0",
		"typescript": "~3.2.2"
	}
}
